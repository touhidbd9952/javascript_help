    const cars = [];
    cars[0]= "Saab";
    cars[1]= "Volvo";
    cars[2]= "BMW";

//get value from particular index of array

  const cars = ["Saab", "Volvo", "BMW"];
  let car = cars[0];

//Access full array

  const cars = ["Saab", "Volvo", "BMW"];
  document.getElementById("demo").innerHTML = cars;  //Saab,Volvo,BMW

